{
  "manifest_version": 2,
  "name": "TabbyCat",
  "version": "1.0",
  "description": "Allows you to put tabs into groups and quickly hide or close them.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": ["background.ts"]
  },
  "permissions": ["menus"]
}
