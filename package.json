{
  "name": "tabby-cat",
  "version": "1.0.0",
  "description": "Allows you to put tabs into groups and quickly hide or close them.",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "parcel build ./src/manifest.json && node generateChrome.js",
    "watch": "parcel watch ./src/manifest.json --no-hmr",
    "debug": "cd dist && web-ext run --arg=\"--new-tab=about:debugging#/runtime/this-firefox\""
  },
  "author": "DallogFheir",
  "license": "MIT",
  "devDependencies": {
    "@parcel/config-webextension": "^2.9.3",
    "@parcel/transformer-inline-string": "^2.9.3",
    "@parcel/transformer-sass": "^2.9.3",
    "@types/alpinejs": "^3.7.2",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "parcel": "^2.9.3",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6",
    "web-ext": "^7.6.2",
    "web-ext-types": "^3.2.1"
  },
  "dependencies": {
    "alpinejs": "^3.13.0"
  }
}
